{% extends "Layouts/body.html.twig" %}

{% block main_title %}
    {{ parent() }} : Connexion

{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/Vue/Account/connect.css') }}" type="text/css">
{% endblock%}

{% block vue %}
    <div class="form-box">
        <form action="" class="form" method="post">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('account_disconnect') }}">Logout</a>
                </div>
            {% endif %}
            <span class="title">Connexion</span>
            <div class="form-container">
                <label for="inputLogin"></label>
                <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="input" autocomplete="username" required autofocus placeholder="Nom d'utilisateur">
                <label for="inputPassword"></label>
                <input type="password" name="password" id="inputPassword" class="input" autocomplete="current-password" required placeholder="Mot de Passe">
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {% if error %}
                <div class="alert alert-danger"> /!\ Erreur : {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>
        <div class="form-section">
            <p>Vous n'avez pas de compte ? <a href="{{ path('account_createaccount') }}">Cr√©er en un :)</a> </p>
        </div>
    </div>
{% endblock %}
