{% extends "Layouts/body.html.twig" %}

{% block main_title %}
    {{ parent() }} : Mon Panier
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/Vue/Products/OrderList.css') }}" type="text/css">
{% endblock%}

{% block vue %}
    <h2>Mon Panier</h2>
    {% if produits is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                </tr>
            </thead>
            <tbody>
                {% set total_articles = 0 %}
                {% set prix_total = 0 %}
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.produit.libelle }}</td>
                        <td>{{ produit.produit.prixUnitaire }} €</td>
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.produit.prixUnitaire * produit.quantite }} €</td>
                    </tr>
                    {% set total_articles = total_articles + produit.quantite %}
                    {% set prix_total = prix_total + produit.produit.prixUnitaire * produit.quantite %}
                {% endfor %}
                <tr>
                    <td colspan="2">Total :</td>
                    <td>{{ total_articles }}</td>
                    <td>{{ prix_total }} €</td>
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}

